{
  "name": "my-building-board",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:https": "node infrastructure/server/nextjs-https-server.js",
    "dev:all": "concurrently \"yarn dev:https\" \"yarn supabase:https\" \"yarn dev:backend\"",
    "dev:frontend": "next dev",
    "dev:backend": "echo 'Backend service not yet implemented'",
    "dev:functions": "echo 'Cloud Functions simulator not yet implemented'",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "supabase:local": "supabase start",
    "supabase:stop": "supabase stop",
    "supabase:https": "supabase start && node infrastructure/server/supabase-https-proxy.js",
    "supabase:https-proxy": "node infrastructure/server/supabase-https-proxy.js",
    "supabase:db:push": "supabase db push",
    "supabase:migrate": "supabase migration up",
    "health:check": "node scripts/check-health.js",
    "dev:setup": "bash scripts/dev-setup.sh",
    "dev:reset": "bash scripts/dev-reset.sh",
    "dev:logs": "bash scripts/dev-logs.sh",
    "dev:stop": "bash scripts/dev-stop.sh"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.17.0",
    "clsx": "^2.1.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.50.0",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
