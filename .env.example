# My Building Board - Environment Variables Example
# Copy this file to .env.local and fill in your values

# Environment
NODE_ENV=development

# Next.js App
NEXT_PUBLIC_APP_URL=https://localhost:3000
NEXT_PUBLIC_API_URL=https://localhost:3000

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# OpenAI
OPENAI_API_KEY=sk-your-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4

# GCP (for Cloud Functions)
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY=path-to-service-account-key.json
GCP_STORAGE_BUCKET=your-storage-bucket

# Email Provider (Gmail API)
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# Email Addresses
DOCUMENTS_EMAIL=documents@mybuildingboard.com
QUESTIONS_EMAIL=questions@mybuildingboard.com

# API Configuration
API_TIMEOUT=30000
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60

# Feature Flags (optional)
# FEATURE_NEW_UI=false
# FEATURE_BETA_FEATURE=true
